<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    tools:context=".ui.payment.PaymentActivity">

    <ImageView
        android:id="@+id/img_back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_back_blue"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"/>

    <TextView
        android:id="@+id/payment_method"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Төлөө ыкмалары"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:fontFamily="@font/philosopher"
        android:layout_below="@id/img_back"
        android:textAlignment="center" />

    <androidx.cardview.widget.CardView
        android:id="@+id/payment_method_card"
        android:layout_width="280dp"
        android:layout_height="65dp"
        android:layout_below="@id/payment_method"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        app:cardCornerRadius="8dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_payment_method"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Төлөө акысы"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/philosopher"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100c"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="110dp"
                android:fontFamily="@font/philosopher"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"/>


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/cards"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/payment_method_card"
        android:layout_marginTop="50dp"
        android:layout_marginStart="125dp"
        android:padding="10dp">

        <androidx.cardview.widget.CardView
            android:layout_width="60dp"
            android:layout_height="30dp"
            app:cardCornerRadius="4dp"
            app:cardBackgroundColor="@color/white"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_mastercard"
                android:layout_marginStart="7dp"
                android:layout_marginEnd="7dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="60dp"
            android:layout_height="30dp"
            app:cardCornerRadius="4dp"
            app:cardBackgroundColor="@color/white"
            android:layout_marginStart="10dp"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/icon_visa" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <TextView
        android:id="@+id/txt_accepted"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Кабыл алынат"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:fontFamily="@font/philosopher"
        android:layout_below="@id/cards"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/edit_name_card"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:hint="Картадагы атыңыз"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_marginStart="30dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/philosopher"
        android:background="@drawable/bg_edit_text_payment"
        android:textSize="16sp"
        android:layout_marginTop="30dp"
        android:layout_below="@id/txt_accepted"
        android:textColorHint="@color/color_payment_edittext"
        android:textColor="@color/color_payment_edittext"/>

    <EditText
        android:id="@+id/edit_number_card"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:hint="Картанын номуру"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_marginStart="30dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/philosopher"
        android:background="@drawable/bg_edit_text_payment"
        android:textSize="16sp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/edit_name_card"
        android:textColorHint="@color/color_payment_edittext"
        android:textColor="@color/color_payment_edittext"/>

    <EditText
        android:id="@+id/edit_date_card"
        android:layout_width="135dp"
        android:layout_height="40dp"
        android:hint="Жарактуу күнү"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_marginStart="67dp"
        android:fontFamily="@font/philosopher"
        android:background="@drawable/bg_edit_text_payment"
        android:textSize="16sp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/edit_number_card"
        android:textColorHint="@color/color_payment_edittext"
        android:textColor="@color/color_payment_edittext"/>

    <EditText
        android:id="@+id/edit_сvv_card"
        android:layout_width="135dp"
        android:layout_height="40dp"
        android:hint="CVV"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/philosopher"
        android:background="@drawable/bg_edit_text_payment"
        android:textSize="16sp"
        android:layout_toRightOf="@id/edit_date_card"
        android:layout_marginTop="20dp"
        android:layout_below="@id/edit_number_card"
        android:textColorHint="@color/color_payment_edittext"
        android:textColor="@color/color_payment_edittext"/>

    <Button
        android:id="@+id/btn_pay"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/color_btn_pay"
        android:layout_below="@id/edit_date_card"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"/>

</RelativeLayout>