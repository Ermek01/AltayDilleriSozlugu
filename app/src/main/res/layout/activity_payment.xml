<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_payment"
    tools:context=".ui.payment.PaymentActivity">

    <ImageView
        android:id="@+id/img_back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_back_payment"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"/>

    <TextView
        android:id="@+id/payment_method"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Төлөө ыкмалары"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:textColor="#001886"
        android:fontFamily="@font/philosopher"
        android:layout_below="@id/img_back"
        android:textAlignment="center" />

    <androidx.cardview.widget.CardView
        android:id="@+id/payment_method_card"
        android:layout_width="280dp"
        android:layout_height="65dp"
        android:layout_below="@id/payment_method"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        app:cardCornerRadius="8dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Төлөө акысы"
                android:textSize="18sp"
                android:textColor="@color/main_bg"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/philosopher"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100c"
                android:textSize="20sp"
                android:textColor="@color/main_bg"
                android:textStyle="normal"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="110dp"
                android:fontFamily="@font/philosopher"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"/>


        </RelativeLayout>

    </androidx.cardview.widget.CardView>



</RelativeLayout>