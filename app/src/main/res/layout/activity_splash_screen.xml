<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    tools:context=".ui.splash.SplashScreenActivity">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="105dp"
        android:src="@drawable/flag"/>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/icon"
        android:layout_centerHorizontal="true"
        android:background="@drawable/frame"
        android:paddingStart="5dp"
        android:paddingEnd="10dp"
        android:paddingTop="5dp"
        android:visibility="gone"
        android:paddingBottom="5dp"
        android:layout_marginTop="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_flag"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:src="@drawable/flag_kg"
            />

        <TextView
            android:id="@+id/name_country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/img_flag"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:textColor="@android:color/white"
            app:drawableEndCompat="@drawable/ccp_ic"
            android:drawablePadding="10dp"
            android:fontFamily="@font/nunito"
            android:text="@string/txt_name_country"
            android:textStyle="normal" />

    </RelativeLayout>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="284dp"
        android:layout_height="45dp"
        android:layout_below="@+id/relativeLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_button"
        android:text="@string/txt_signin"
        android:visibility="gone"
        android:fontFamily="@font/nunito"
        android:textColor="@color/txt_btn" />

    <TextView
        android:id="@+id/txt_without_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/continue_without_an_account"
        android:textColor="@android:color/white"
        android:visibility="gone"
        android:textSize="17sp"/>

    <ImageView
        android:id="@+id/circle_240dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_circle_240dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="135dp"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/circle_350dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_circle_350dp"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:layout_marginTop="80dp"/>

    <ImageView
        android:id="@+id/circle_450dp"
        android:layout_width="450dp"
        android:layout_height="450dp"
        android:src="@drawable/ic_circle_450dp"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:layout_marginTop="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        />






</RelativeLayout>